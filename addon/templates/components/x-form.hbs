{{#with (changeset data validations) as |changeset|}}
  {{yield
    (hash
      changeset=changeset
      field=(component "x-field"
        changeset=changeset
        validate=(action 'validateProperty' changeset)
      )
      isSubmitting=isSubmitting
      isInvalid=changeset.isInvalid
      isUnsubmittable=(or changeset.isPristine changeset.isInvalid isSubmitting)
      actions=(hash
        onSubmit=(action 'onSubmit' changeset)
        onCancel=(action 'onCancel' changeset)
      )
    )
  }}
{{/with}}
